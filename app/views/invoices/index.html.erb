<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
    <%# invoice_hash = JSON.parse(invoice.hash_store) %>
      <tr>
        <td><%= link_to to_hash(invoice.hash_store)[:title], invoice %></td>
        <td><%= link_to to_hash(invoice.hash_store)[:tax_no], invoice %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

