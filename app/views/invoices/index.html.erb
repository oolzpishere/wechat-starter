<p id="notice"><%= notice %></p>

<h5>发票抬头</h5>

<div class="row">
  <div class="col s12">
    <% @invoices.each do |invoice| %>

    <div class="card">
      <div class="card-content">
        <table class="striped">
          <!-- <thead>
            <tr>
              <th class="card-title"><%# result.form_name %></th>
            </tr>
          </thead> -->

          <tbody>
            <% hash_store = to_hash(invoice.hash_store) %>
            <% hash_store
            .select{|k| %i(title tax_no create_time).include?(k)}
            .each do |k, _| %>
            <tr>
              <td>
                <b><%= invoice_hash[k]%>:</b>
                <%= hash_store[k]%>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <div class="card-action">
          <%= link_to '查看详情', invoice, class: "waves-effect waves-light btn blue darken-1 white-text" %>
        </div>

      </div>
    </div>

    <% end %>
    <%# link_to '返回',  root_path, class: "waves-effect waves-light btn blue darken-1 white-text" %>
  </div>
</div>
